// Place your key bindings in this file to override the defaults
[
    {
        "key": "ctrl+h",
        "command": "workbench.action.navigateLeft",
        "when": "vim.active && vim.use<C-w>",
    },
    {
        "key": "ctrl+j",
        "command": "workbench.action.navigateDown",
        "when": "vim.active && vim.use<C-w>",
    },
    {
        "key": "ctrl+k",
        "command": "workbench.action.navigateUp",
        "when": "vim.active && vim.use<C-w>",
    },
    {
        "key": "ctrl+k",
        "command": "workbench.action.focusActiveEditorGroup",
        "when": "terminalFocus"
    },
    {
        "key": "ctrl+l",
        "command": "workbench.action.navigateRight",
        "when": "vim.active && vim.use<C-w>",
    },
    {
        "key": "ctrl+l",
        "command": "workbench.action.navigateRight",
        "when": "sideBarFocus"
    },
    {
        "key": "ctrl+shift+alt+down",
        "command": "-incrementor.decrementByTenth"
    },
    {
        "key": "ctrl+down",
        "command": "-incrementor.decrementByOne"
    },
    {
        "key": "ctrl+shift+down",
        "command": "-incrementor.decrementByTen"
    },
    {
        "key": "ctrl+shift+alt+up",
        "command": "-incrementor.incrementByTenth"
    },
    {
        "key": "ctrl+up",
        "command": "-incrementor.incrementByOne"
    },
    {
        "key": "ctrl+shift+up",
        "command": "-incrementor.incrementByTen"
    },
    {
        "key": "ctrl+n",
        "command": "explorer.newFile",
        "when": "!editorFocus"
    },
    {
        "key": "ctrl+shift+n",
        "command": "explorer.newFolder",
        "when": "!editorFocus"
    },
]