{
    "version": "1.0",
    "description": "Agent activation triggers for Claude Code sub-agents. Controls when agents automatically suggest or activate.",
    "agents": {
        "codebase-explorer": {
            "type": "exploration",
            "enforcement": "suggest",
            "priority": "high",
            "model": "haiku",
            "description": "Lightning-fast codebase exploration using ast-grep for structural code search, ripgrep for text search, and fzf for fuzzy matching",
            "promptTriggers": {
                "keywords": [
                    "explore codebase",
                    "find files",
                    "find code",
                    "locate file",
                    "locate code",
                    "where is",
                    "search codebase",
                    "search for",
                    "show architecture",
                    "map dependencies",
                    "trace how",
                    "trace dependencies",
                    "find class",
                    "find function",
                    "find method",
                    "find interface",
                    "find type",
                    "find component",
                    "codebase structure",
                    "project structure",
                    "architecture overview"
                ],
                "intentPatterns": [
                    "(explore|search|find|locate|where is).*?(codebase|code|file|class|function|method|component)",
                    "(show|map|trace|visualize).*?(architecture|dependencies|structure)",
                    "where.*?(is|are|can i find)",
                    "find.*?(files|code|implementation).*?(related to|for|about)",
                    "architecture.*?(overview|mapping|analysis)"
                ]
            }
        },
        "root-cause-analyst": {
            "type": "exploration",
            "enforcement": "suggest",
            "priority": "high",
            "model": "sonnet",
            "description": "Systematic bug investigation, hypothesis testing, evidence-based debugging",
            "promptTriggers": {
                "keywords": [
                    "investigate error",
                    "debug issue",
                    "root cause",
                    "why is failing",
                    "why doesn't work",
                    "why is broken",
                    "troubleshoot",
                    "diagnose problem",
                    "analyze bug",
                    "analyze error",
                    "systematic debugging",
                    "hypothesis testing"
                ],
                "intentPatterns": [
                    "(investigate|debug|diagnose|analyze).*?(error|bug|issue|problem|failure)",
                    "why.*?(failing|broken|not working|doesn't work)",
                    "root.*?cause.*?(analysis|investigation)",
                    "systematic.*?(debug|investigation)",
                    "(troubleshoot|diagnose).*?(issue|problem|error)"
                ]
            }
        },
