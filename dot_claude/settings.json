{
  "permissions": {
    "allow": [
      "Bash(npm run:*)",
      "Bash(npm run)",
      "Read(~/.zshrc)",
      "mcp__chrome-mcp-server",
      "mcp__context7"
    ]
  },
  "hooks": {
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "$HOME/.claude/hooks/skill-activation-prompt.sh"
          }
        ]
      }
    ]
  },
  "alwaysThinkingEnabled": false
}
