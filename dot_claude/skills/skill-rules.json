        "skill-developer": {
            "type": "domain",
            "enforcement": "suggest",
            "priority": "high",
            "description": "Meta-skill for creating, enhancing, and managing Claude Code skills",
            "promptTriggers": {
                "keywords": [
                    "skill system",
                    "create skill",
                    "add skill",
                    "new skill",
                    "build skill",
                    "make skill",
                    "generate skill",
                    "write skill",
                    "improve skill",
                    "enhance skill",
                    "optimize skill",
                    "refactor skill",
                    "update skill",
                    "fix skill",
                    "upgrade skill",
                    "refine skill",
                    "skill triggers",
                    "skill rules",
                    "hook system",
                    "skill development",
                    "skill-rules.json",
                    "skill.md"
                ],
                "intentPatterns": [
                    "(how do|how does|explain).*?skill",
                    "(create|add|modify|build|new|make|generate|write).*?skill",
                    "(improve|enhance|optimize|refactor|update|fix|upgrade|refine).*?skill",
                    "skill.*?(work|trigger|activate|system|creation|development|improvement|enhancement|optimization)"
                ]
            }
        },
