#!/bin/bash
# run_once_after_55-setup-minimal-config.sh.tmpl
# Swap configs based on minimal mode

set -e

{{ if .minimal | default false }}
echo "ðŸ“¦ Setting up minimal configs..."

# Mise config
MISE_CONFIG="$HOME/.config/mise/config.toml"
MISE_MINIMAL="$HOME/.config/mise/minimal.config.toml"
if [ -f "$MISE_MINIMAL" ]; then
    cp "$MISE_MINIMAL" "$MISE_CONFIG"
    echo "âœ… Minimal mise config applied"
fi

# Zshrc
ZSHRC="$HOME/.zshrc"
ZSHRC_MINIMAL="$HOME/.zshrc_minimal"
if [ -f "$ZSHRC_MINIMAL" ]; then
    cp "$ZSHRC_MINIMAL" "$ZSHRC"
    echo "âœ… Minimal zshrc applied"
fi

{{ else }}
echo "âœ… Full configs already in place"
{{ end }}
