{{- $name := promptStringOnce . "name" "Git user name" -}}
{{- $email := promptStringOnce . "email" "Git email address" -}}
{{- $minimal := false -}}
{{- if hasKey . "minimal" -}}
{{-   $minimal = .minimal -}}
{{- end -}}
{{- $conda := false -}}
{{- if hasKey . "conda" -}}
{{-   $conda = .conda -}}
{{- end -}}

[data]
    name = {{ $name | quote }}
    email = {{ $email | quote }}
    minimal = {{ $minimal }}
    conda = {{ $conda }}

[git]
    autoPush = false
    autoCommit = true

[edit]
    command = "nvim"

[merge]
    command = "nvim"
    args = ["-d"]
